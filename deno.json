{
  "tasks": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "sda": "deno run --node-modules-dir=auto -A --watch --check sda/main.ts",
    "clean": "rm -rf .sda-cache && rm -rf .journalism-cache && rm -rf .tmp"
  },
  "nodeModulesDir": "auto",
  "unstable": [
    "sloppy-imports",
    "fmt-component"
  ],
  "lint": {
    "rules": {
      "exclude": [
        "no-sloppy-imports"
      ]
    }
  },
  "imports": {
    "$lib": "./src/lib/index.ts",
    "$lib/": "./src/lib/",
    "@nshiab/journalism-format": "jsr:@nshiab/journalism-format@^1.0.3",
    "@observablehq/plot": "npm:@observablehq/plot@^0.6.17",
    "@sveltejs/adapter-auto": "npm:@sveltejs/adapter-auto@^7.0.0",
    "@sveltejs/adapter-static": "npm:@sveltejs/adapter-static@^3.0.10",
    "@sveltejs/kit": "npm:@sveltejs/kit@^2.50.2",
    "@sveltejs/vite-plugin-svelte": "npm:@sveltejs/vite-plugin-svelte@^6.2.4",
    "highlight.js": "npm:highlight.js@^11.11.1",
    "svelte": "npm:svelte@^5.50.1",
    "svelte-check": "npm:svelte-check@^4.3.6",
    "typescript": "npm:typescript@^5.9.3",
    "vite": "npm:vite@^7.3.1"
  },
  "compilerOptions": {
    "rootDirs": [
      ".",
      "./.svelte-kit/types"
    ],
    "verbatimModuleSyntax": true,
    "lib": [
      "esnext",
      "DOM",
      "DOM.Iterable",
      "deno.ns"
    ],
    "types": [
      "./.svelte-kit/ambient.d.ts",
      "./.svelte-kit/non-ambient.d.ts"
    ]
  },
  "allowScripts": {
    "allow": [],
    "deny": ["npm:esbuild@0.27.3", "npm:playwright-chromium@1.58.2", "npm:protobufjs@7.5.4"]
  }
}